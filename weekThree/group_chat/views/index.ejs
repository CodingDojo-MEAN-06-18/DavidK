
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div id="chatroom">
        <ul id="chat">

        </ul>
    </div>
    <form action="" method="post">
        <input type="text" placeholder="Enter your message here.">
        <input type="submit" value="Send">
    </form>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.dev.js"></script>
    <script>
        $(document).ready(function () {
            var current_user;
            var name;    
           

            var socket = io();
            
            socket.emit('got_a_new_user', {name: name});
            
            socket.on('connection', function(data) {
                $("#chat").append(data.message);
            });


            socket.on('display_message', function(data) {
                var messages = data.message;
                var messageThread = "";
                for(var i = 0; i < messages.length; i++){
                    messageThread += "<p>" + messages[i].name
 + ":" + messages[i].message + "</p";
                }

                $("#chat").append(messageThread);
            })

            $('form').on('submit', function(e) {
                e.preventDefault();
                socket.emit('new_message', {name: name, message: $("input[type='text']").val()});
                $("input[type='text']").val("");
            });
        });
    </script>
</body>
</html>